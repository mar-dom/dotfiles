# vim:set ft=sh

alias ls='ls --color=auto --group-directories-first -F'
alias ll='ls -la'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias dmesg='dmesg --color'
alias mv='mv -v'
alias cp='cp -v'
alias rm='rm -v'
alias path='echo -e ${PATH//:/\\n} | sort'
alias gs='git status'
alias gd='git diff'
alias gl='git log'
alias antupdate='antigen update'
alias antlist='antigen list'
alias antselfupdate='antigen selfupdate'
alias showaliases='cat ~/.aliases'
