# vim: set ft=sh:
#
command_exists () {
    command -v "$1" >/dev/null 2>&1
}

distro=""

# Generell
alias ls='ls --color=auto --group-directories-first -F'
alias ll='ls -lA'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias dmesg='dmesg --color'
alias mv='mv -v'
alias cp='cp -v'
alias rm='rm -v'
alias tailf='tail -f'
alias show-aliases='alias'
alias show-path='echo -e ${PATH//:/\\n} | sort'
alias show-ssh-ciphers='ssh -Q cipher'
alias show-ssh-mac='ssh -Q mac'
alias show-ssh-kex='ssh -Q kex'
alias show-wan-ip='curl icanhazip.com'

if command_exists lsb_release; then
    distro=`lsb_release -i | awk '{print $3}'`
    alias show-lsb="echo $distro"
fi

if [[ $distro == "Gentoo" ]]; then
    alias eqf='equery f'
    alias equ='equery u'
    alias eqh='equery h'
    alias eqa='equery a'
    alias eqb='equery b'
    alias eql='equery l'
    alias eqd='equery d'
    alias eqg='equery g'
    alias eqc='equery c'
    alias eqk='equery k'
    alias eqm='equery m'
    alias eqy='equery y'
    alias eqs='equery s'
    alias eqw='equery w'
#elif [ $distro == "Debian" ]; then
fi 

unset distro

